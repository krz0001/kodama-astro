---
import ReleaseTrack from "./ReleaseTrack.jsx";
import { getLocale } from "i18n:astro";
const locale = getLocale();
const { tracklist } = Astro.props;
---

<section class="mx-auto my-16">
  <h2 class="text-2xl text-center uppercase mb-8 font-black">tracklist</h2>

  <div class="w-auto">
    {tracklist.map((track, index) => {
      return <ReleaseTrack locale={locale} track={track} trackKey={index + 1} client:load />
    })}
  </div>
</section>